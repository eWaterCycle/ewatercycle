{
	"name": "Micromamba",
	// TODO remove unused comments
	// "image": "mcr.microsoft.com/devcontainers/universal:2",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"features": {
		// "ghcr.io/mamba-org/devcontainer-features/micromamba:1": {
    		// "envFile": "/tmp/conda-lock.yml",
			// "envName": "ewatercycle"
  		// },
